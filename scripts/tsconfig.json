{
  "compilerOptions": {
    "types": ["@types/node"],
    "target": "es2017",
    "lib": ["es2017"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["*.ts"],
  "exclude": ["node_modules/@types/node"]
}
