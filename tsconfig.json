{
  "compilerOptions": {
    "types": ["@ci-types/cjs"],
    "target": "es2017",
    "lib": ["es2017"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/*.ts", "lib/*.ts"],
  "exclude": ["node_modules/@types/node", "scripts"]
}
