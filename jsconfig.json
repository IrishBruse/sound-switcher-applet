{
  "compilerOptions": {
    "types": ["@ci-types/cjs", "./lib/"],
    "target": "es2017",
    "lib": ["es2017"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "exactOptionalPropertyTypes": true
  },
  "include": ["**/*.js"],
  "exclude": ["eslint.config.js"]
}
